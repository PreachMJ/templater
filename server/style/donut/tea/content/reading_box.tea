@ global.reading_box = type_mixin(".reading-box");
.reading_box.default() {
	overflow:hidden;
	padding:28px 28px 27px 31px;
	border-left:3px solid @color(1,3);
	background: #eee;
	margin:0 0 1em;
    
    h2 {
        margin:0 0 7px;
    }
    
    p {
        margin:0 !important; 
    }
    
    .continue{
        float:right;
    }
}