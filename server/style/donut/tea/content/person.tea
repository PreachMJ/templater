@ global.person = type_mixin(".person");

.person.default() {
    .person-img {
        max-width: 100%;
        margin-bottom: 1em;
    }

    .person-links {
        float: right;
    }

    .person-name, .person-title {
        font-size: 1.5em;
        line-height: 1.5em;
    }
    
    .person-content {
        margin-top: 1em;
    }
    
    .icon-link {
        margin: 0 0 0 15px;
    }
}