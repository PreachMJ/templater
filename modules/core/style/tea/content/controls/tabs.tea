@ global.tabs = type_mixin(".tabs")

.tabs.default() {
    border: 1px solid #ddd;
    border-radius: 0.3em;
    padding: 1em;
    background: white;
    
    > ul {
        height: 40px;
        list-style: none;
        margin: 0;
        padding: 0;
        border-bottom: 1px solid #ddd;
        
        li {
            margin: 0;
            padding: 0;
            height: 40px;
            display: inline-block;
            position: relative;
            top: 1px;
            
            a {
                border: 0;
                height: 40px;
                line-height: 40px;
                padding: 0 1em;
                display: inline-block;
                outline: none;
                &:hover {
                    background: #eee;
                    border-radius: 0.3em; 
                }
            }
        }
        
        li.active a {
            color: #333;
            background: white;
            text-decoration: none;
            border: 1px solid #ddd;
            border-bottom: 1px solid white;
            border-radius: 0.3em;           
        }        
    }
    
    > div {
        padding: 1em;
    }
}

