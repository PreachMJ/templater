.tabs.apple(data)
{
    @{
        if (!data)
            data = {};
        
        var bg = color(data.header_color || "#333");
        var dark = lightness(bg)<40;        
        var bg_top = dark ? lighten(bg, 20) : darken(bg, 20);
        var active_bg = dark ? lighten(bg, 20) : darken(bg, 20);
        var active_bg_top = dark ? lighten(bg_top, 20) : darken(bg_top, 20);
    }

    border-radius: 0.5em;
    //border: 1px solid #ddd;        
    box-shadow: 0 0 0.1em;
    margin: 1em;
    background-color: rgb(250,250,250);
    
    .tabs-nav {
        list-style: none;
        display: block;
        position: relative;
        top: -1em;
        text-align: center;
        margin: 0;
               
        li {
            display: inline-block;
            position: relative;            
            border-left: 1px solid #eee;
            border-right: 1px solid #eee;
            .gradient.vertical(bg_top, bg);
            .effects.glare({margin: {left: 0, right: 0}});
            
            a {
                display: block;
                line-height: 1em;
                color: @{dark ? 'white' : 'black'};
                padding: 0.5em 0.8em;                
                overflow: hidden;
                
                &:hover {
                    text-decoration: none;
                }
            }
        }   
                
        li:hover {
            .gradient.vertical(lighten(bg_top, 3), lighten(bg, 3));
        }
        
        li.active {
            &:before {
                display: none;
            }
            .gradient.vertical(active_bg, active_bg_top);
            box-shadow: inset 0 0 0.3em;
            
            a {
                color: @{dark ? 'black' : 'white'};
            }
        }                
        
        li:first-child {
            border-left: none;
            border-radius: 0.8em 0 0 0.8em;
            .effects.glare({margin: {right: 0}});
        }
        li:last-child {       
            border-right: none;
            border-radius: 0 0.8em 0.8em 0;
            .effects.glare({margin: {left: 0}});
        }                        
    }    
    
    > div {
        padding: 0 1em 1em 1em;
    }
}