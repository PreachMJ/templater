.alerts.apple(){    
    border-radius: 0.8em;
    position: relative;    
    border: 1px solid rgba(220,220,220,0.6);    
    padding: 1em 2em 1em 1em;    
    .gradient.vertical('#efefef', '#ededed');
    font-size: 1.2em;
    
    text-shadow: 0 1px 1px rgba(255,255,255,.5);

    .close {
        position: relative;
        top: -7px;
        right: -21px;
        line-height: 18px;
        float: right;
        
        
        font-size: 0;
        .icon('remove');
        &:before {
            color: #999;
            font-size: 14px;
        }
    }
    
    &.error {
        color: #700;
        .gradient.vertical('#fee', darken('#fee', 20));
    }
    
    &.notice {
        color: #770;
        .gradient.vertical('#ffe', darken('#ffe', 20));
    }
    
    &.success {
        color: #070;
        .gradient.vertical('#efe', darken('#efe', 20));
    }    
    .effects.glare();
}
