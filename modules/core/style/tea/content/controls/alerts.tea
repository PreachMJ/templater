@ global.alerts = type_mixin(".alert")

.alerts.base(){
    padding: 1em 2em 1em 1em;    
    background-color: #eee;
    font-size: 1.2em;

    .close {
        position: relative;
        top: -7px;
        right: -21px;
        line-height: 18px;
        float: right;
        
        font-size: 0;
        .icon('remove');
        &:before {
            color: #aaa;
            font-size: 14px;
        }
    }
    
    &.error {
        color: #900;
        border-color: #a99;
        background: #faa;
    }
    
    &.notice {
        color: #770;
        border-color: #aa9;
        background: #ffa;
    }
    
    &.success {
        color: #070;
        border-color: #9a9;
        background: #afa;
    }
}

