@ widgets.tagcloud = type_mixin(".widget.widget_tag_cloud");

.widgets.tagcloud.default() {    
    .widgets.common.sidebar();
    
    .tagcloud a {
        border: 1px solid rgba(100,100,100,0.3);
        border-radius: 0.3em;
        padding: 0.3em 0.5em 0.3em 0.5em;
        box-shadow: inset 0 0 2px 4px rgba(100, 100, 100, 0.1);
        color: #333;
        
        &:hover {            
            text-decoration: none;
            background-color: #f5f5f5;
        }
    }
}