@ global.testimonials = type_mixin(".testimonials");

.testimonials.default(data) {
    .testimonial {
        
        margin-bottom: 1.5em;
        
        blockquote {
            margin: 0 0 1em 0;
        }
        
        span.name {
            font-size: 1.2em;
            text-align: right;
            display: block;
        }
    }
}